<%- include('./partials/loginheader') %>
<% if (error && error.length > 0) { %>
  <div
    id="flash-message"
    class="absolute top-8 left-1/2 -translate-x-1/2 px-6 py-3 rounded-md bg-red-600 shadow-lg transition-opacity duration-500">
    <span class="text-white font-medium">
      <%= error[0] %>
    </span>
  </div>
<% } %>

<% if (success && success.length > 0) { %>
  <div
    id="flash-message"
    class="absolute top-8 left-1/2 -translate-x-1/2 px-6 py-3 rounded-md bg-indigo-600 shadow-lg transition-opacity duration-500">
    <span class="text-white font-medium">
      <%= success[0] %>
    </span>
  </div>
<% } %>


<div class="w-full h-screen flex bg-gray-100  px-20">

  <!-- REGISTER -->
  <div class="w-1/2 flex items-center justify-center">
    <div class="w-full px-32">
      <h3 class="text-4xl font-semibold text-gray-800">
        Welcome to <span class="text-indigo-600">ElevenEssentials</span>
      </h3>
      <h4 class="text-2xl text-gray-600 ">
        Create your account
      </h4>

      <form autocomplete="off" action="/users/register" method="post">
        <input
          class="bg-white block w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          type="text"
          placeholder="Full Name"
          name="Full_Name">

        <input
          class="bg-white block w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          type="email"
          placeholder="Email"
          name="email" required>

        <input
          class="bg-white block w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          type="password"
          placeholder="Password"
          name="password" required>

        <input
          class="px-6 py-3 mt-2 me-16 rounded-full bg-indigo-600 hover:bg-indigo-700 text-white transition"
          type="submit"
          value="Create Account">
          
          <a href="/owners" class=" p-3 bg-blue-400 rounded text-gray-600 mb-6">owner</a>

      </form>
      
    </div>
  </div>

  <!-- LOGIN -->
  <div class="w-1/2 flex items-center justify-center">
    <div class="w-full px-32">
      <h4 class="text-2xl font-semibold text-gray-800 mb-6">
        Login to your account
      </h4>

      <form autocomplete="off" action="/users/login" method="post">
        <input
          class="bg-white block w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          type="email"
          placeholder="Email"
          name="email">

        <input
          class="bg-white block w-full px-4 py-2 border border-gray-300 rounded-md mb-4 focus:outline-none focus:ring-2 focus:ring-indigo-500"
          type="password"
          placeholder="Password"
          name="password">

        <input
          class="px-6 py-3 mt-2 rounded-full bg-indigo-600 hover:bg-indigo-700 text-white transition"
          type="submit"
          value="Login">
      </form>
      
    </div>
  </div>
<script>
  setTimeout(() => {
    const flash = document.getElementById("flash-message");
    if (flash) {
      flash.classList.add("opacity-0");
      setTimeout(() => flash.remove(), 500);
    }
  }, 2000);
</script>

</div>

<%- include('partials/footer') %>
