<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>All Users</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen">

  <!-- NAVBAR -->
  <nav class="bg-white shadow px-6 py-4 flex justify-between">
    <h1 class="text-xl font-bold text-indigo-600">Admin Panel</h1>
    <a href="/logout" class="text-red-500 hover:underline">Logout</a>
  </nav>

  <!-- USERS TABLE -->
  <div class="max-w-6xl mx-auto mt-8 bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-center mb-6">
  <h2 class="text-2xl font-bold text-gray-800">Registered Users</h2>

  <a
    href="/owners/products"
    class="px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 transition"
  >
    ‚Üê Go Back
  </a>
</div>
    <% if (users.length === 0) { %>
      <p class="text-gray-500">No users found.</p>
    <% } else { %>
      <div class="overflow-x-auto">
        <table class="w-full border border-gray-200">
          <thead class="bg-indigo-600 text-white">
            <tr>
              <th class="p-3 text-left">#</th>
              <th class="p-3 text-left">Full Name</th>
              <th class="p-3 text-left">Email</th>
              <th class="p-3 text-left">Joined</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach((user, index) => { %>
              <tr class="border-b hover:bg-gray-100">
                <td class="p-3"><%= index + 1 %></td>
                <td class="p-3 font-medium"><%= user.Full_Name %></td>
                <td class="p-3"><%= user.email %></td>
                <td class="p-3 text-sm text-gray-600">
                  <%# user.createdAt.toDateString() %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

</body>
</html>
