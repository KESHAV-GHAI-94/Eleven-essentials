<%- include('./partials/adminheader') %>

<% if (success && success.length > 0) { %>
  <div
    id="flash-message"
    class="fixed top-24 left-1/2 -translate-x-1/2 px-6 py-3 rounded-lg bg-blue-600 shadow-lg text-white z-50 transition-opacity">
    <%= success %>
  </div>
<% } %>

<div class="min-h-screen bg-gray-100 flex pt-16">
  <!-- SIDEBAR -->
  <aside class="w-64 bg-white shadow-lg p-6 hidden md:block">
    <h3 class="text-xl font-bold mb-6 text-blue-600">
      Owner Panel
    </h3>

    <nav class="flex flex-col gap-3 text-gray-700">
      <a href="/owners/products"
        class="px-4 py-2 rounded-lg hover:bg-gray-100">
        ðŸ“¦ All Products
      </a>
      <a href="/owners/create"
        class="px-4 py-2 rounded-lg bg-blue-50 text-blue-600 font-medium">
        âž• Create Product
      </a>
    </nav>
  </aside>

  <!-- MAIN CONTENT -->
  <main class="flex-1 pt-4 p-8">

    <div class="bg-white rounded-xl shadow p-8 max-w-4xl">

      <h2 class="text-2xl font-semibold mb-6">
        Create New Product
      </h2>

      <form
        autocomplete="off"
        action="/products/create"
        method="post"
        enctype="multipart/form-data"
        class="space-y-8"
      >

        <!-- PRODUCT DETAILS -->
        <section>
          <h3 class="text-lg font-semibold mb-4">
            Product Details
          </h3>

          <div class="mb-4">
            <label class="block mb-2 font-medium">
              Product Image
            </label>
            <input
              name="image"
              type="file"
              class="block w-full border rounded-lg p-2 bg-gray-50"
            />
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <input
              name="name"
              type="text"
              placeholder="Product Name"
              class="border p-3 rounded-lg w-full"
              required
            />
            <input
              name="price"
              type="text"
              placeholder="Price"
              class="border p-3 rounded-lg w-full"
              required
            />
            <input
              name="discount"
              type="text"
              placeholder="Discount %"
              class="border p-3 rounded-lg w-full"
            />
          </div>
        </section>

        <!-- PANEL DETAILS -->
        <section>
          <h3 class="text-lg font-semibold mb-4">
            Panel Appearance
          </h3>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 items-center">
            <div>
              <label class="block mb-2 font-medium">
                Background Color
              </label>
              <input name="bgcolor" type="color" value="#f5c6c6" class="w-full h-10 rounded" />
            </div>

            <div>
              <label class="block mb-2 font-medium">
                Panel Color
              </label>
              <input name="panelcolor" type="color" value="#ec9898" class="w-full h-10 rounded" />
            </div>

            <div>
              <label class="block mb-2 font-medium">
                Text Color
              </label>
              <input name="textcolor" type="color" class="w-full h-10 rounded" />
            </div>
          </div>
        </section>

        <!-- SUBMIT -->
        <button
          type="submit"
          class="px-6 py-3 bg-blue-600 text-white rounded-full font-medium hover:bg-blue-700 transition"
        >
          Create Product
        </button>

      </form>

    </div>

  </main>
</div>

<%- include('./partials/footer') %>

<script>
  setTimeout(() => {
    const flash = document.getElementById("flash-message");
    if (flash) {
      flash.classList.add("opacity-0");
      setTimeout(() => flash.remove(), 500);
    }
  }, 2000);
</script>
